
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // Helper Functions for Write Rules
    // =================================
        
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }
    
    function getMyData() {
      return getUserData(request.auth.uid);
    }
    
    function userProfileExists(uid) {
        return exists(/databases/$(database)/documents/users/$(uid));
    }
    
    function isAdmin() {
      return userProfileExists(request.auth.uid) && getMyData().roleId == 'admin';
    }
    
    function isStaff() {
      return userProfileExists(request.auth.uid) && getMyData().roleId in ['admin', 'manager', 'loan_officer'];
    }

    // =================================
    // Global Read Rule
    // =================================
    
    // Allow any authenticated user to read or list any document.
    // This solves list permission errors on dashboards. The app's queries are
    // responsible for filtering data to what the user should see.
    match /{document=**} {
      allow read: if isSignedIn();
    }
    
    // =================================
    // Specific Write Rules
    // =================================

    match /users/{userId} {
      // Any user can create their own profile, or update their own profile.
      allow create, update: if isOwner(userId);
      // An admin can update or delete any user in their own organization.
      allow update, delete: if isAdmin() && getMyData().organizationId == resource.data.organizationId;
    }
    
    match /roles/{roleId} {
      // Roles are seeded and cannot be changed by clients.
      allow write: if false;
    }
    
    match /branches/{branchId} {
      // Only admins can manage branches.
      allow write: if isAdmin();
    }
    
    match /borrowers/{borrowerId} {
      // Staff can create and update borrowers. Admins can delete.
      allow create, update: if isStaff();
      allow delete: if isAdmin();
    }
    
    match /loans/{loanId} {
      // Staff can create loans. Admins can approve (update) them. No deletes for data integrity.
      allow create: if isStaff();
      allow update: if isAdmin();
      allow delete: if false;
    }
    
    match /loans/{loanId}/installments/{installmentId} {
      // Installments are created in a batch by an Admin during loan approval.
      allow write: if isAdmin();
    }
    
    match /loanProducts/{loanProductId} {
      // Only admins can manage loan products.
      allow write: if isAdmin();
    }
    
    match /repayments/{repaymentId} {
      // Staff can record repayments. No updates or deletes.
      allow create: if isStaff();
      allow update, delete: if false;
    }
    
    match /registrationPayments/{paymentId} {
      // Staff can record registration fees. No updates or deletes.
      allow create: if isStaff();
      allow update, delete: if false;
    }
    
    match /auditLogs/{logId} {
        // Only admins can create audit logs (though this is often a server-side process).
        allow write: if isAdmin();
    }
  }
}
