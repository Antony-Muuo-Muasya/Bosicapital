
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development-only rule: Allow read/write to any authenticated user.
    // This is insecure for production and should be replaced with
    // more granular rules before launch.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
