
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // Helper Functions
    // =================================
        
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function getMyRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId;
    }
    
    function userProfileExists() {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // =================================
    // Collection Rules
    // =================================
    
    // Default Read Rule: Allow any authenticated user to read data.
    // This is a broad rule to solve the permission errors on dashboard queries.
    // The application code is responsible for filtering data appropriately.
    match /{document=**} {
      allow read: if isSignedIn();
    }
    
    // --- Write Rules ---
    // Writes are denied by default and explicitly allowed below.

    match /users/{userId} {
      // Any user can create their own profile.
      // A user can only update their own profile.
      allow create, update: if isOwner(userId);
      // An admin can update or delete any user.
      allow update, delete: if userProfileExists() && getMyRole() == 'admin';
    }
    
    match /roles/{roleId} {
      // Roles are seeded and not client-writable.
      allow write: if false;
    }
    
    function isStaff() {
      return userProfileExists() && getMyRole() in ['admin', 'manager', 'loan_officer'];
    }

    function isAdmin() {
      return userProfileExists() && getMyRole() == 'admin';
    }
    
    match /branches/{branchId} {
      allow write: if isAdmin();
    }
    
    match /borrowers/{borrowerId} {
      allow create, update: if isStaff();
      allow delete: if isAdmin();
    }
    
    match /loans/{loanId} {
      allow create: if isStaff();
      allow update: if isAdmin(); // For approvals
      allow delete: if false; // For data integrity
    }
    
    match /loans/{loanId}/installments/{installmentId} {
      // Installments are written in a batch when a loan is approved.
      allow write: if isAdmin();
    }
    
    match /loanProducts/{loanProductId} {
      allow write: if isAdmin();
    }
    
    match /repayments/{repaymentId} {
      allow create: if isStaff();
      allow update, delete: if false;
    }
    
    match /registrationPayments/{paymentId} {
      allow create: if isStaff();
      allow update, delete: if false;
    }
    
    match /auditLogs/{logId} {
        allow write: if isAdmin();
    }
  }
}
