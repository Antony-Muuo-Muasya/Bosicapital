
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isStaff(userId) {
        // This function should only be used in WRITE rules.
        // Using get() in a read/list rule can cause performance issues or timeouts.
        let role = get(/databases/$(database)/documents/users/$(userId)).data.roleId;
        return role in ['admin', 'manager', 'loan_officer'];
    }

    match /{document=**} {
      // By default, allow all authenticated users to read and list.
      // This is a broad but simple rule that will fix the LIST permission errors on dashboards.
      // Write permissions are handled by more specific rules below.
      allow read: if request.auth != null;
      
      // By default, deny all writes. Specific collections will override this.
      allow write: if false;
    }

    match /users/{userId} {
      allow write: if request.auth.uid == userId || isStaff(request.auth.uid);
    }
    
    match /branches/{branchId} {
        allow write: if isStaff(request.auth.uid);
    }
    
    match /borrowers/{borrowerId} {
      allow write: if isStaff(request.auth.uid);
    }

    match /loanProducts/{productId} {
      allow write: if isStaff(request.auth.uid);
    }

    match /loans/{loanId} {
      allow write: if isStaff(request.auth.uid);

       match /installments/{installmentId} {
        allow write: if isStaff(request.auth.uid);
      }
    }

    match /repayments/{repaymentId} {
      allow write: if isStaff(request.auth.uid);
    }
    
    match /registrationPayments/{paymentId} {
        allow write: if isStaff(request.auth.uid);
    }
  }
}
