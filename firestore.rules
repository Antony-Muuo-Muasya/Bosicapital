rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Function to get the user's role ID from their user document.
    // This can be called safely in rules where we aren't reading from the users collection itself.
    function getUserRoleId() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      if (userDoc == null || !('roleId' in userDoc.data)) {
        return 'none';
      }
      return userDoc.data.roleId;
    }
    
    // This function checks the incoming request data to determine role, to avoid recursive get() calls.
    function getIncomingUserRole() {
        return request.resource.data.roleId;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      // Allow read if the user is reading their own document.
      // Admin read access would require custom claims to avoid recursive lookups, which is a broader change.
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Allow create if it's the user creating their own doc, and they are NOT trying to make themselves an admin.
      allow create: if isAuthenticated() && 
                    isOwner(userId) &&
                    getIncomingUserRole() != 'admin';
                    
      // Only admins can update user documents.
      allow update: if isAuthenticated() && getUserRoleId() == 'admin';

      // Only admins can delete users.
      allow delete: if isAuthenticated() && getUserRoleId() == 'admin';
    }

    match /roles/{roleId} {
      // Allow any authenticated user to read role definitions.
      // This is safe as roles are configuration, not sensitive user data.
      // This also resolves a race condition on new user sign-up.
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && getUserRoleId() == 'admin';
    }

    match /auditLogs/{logId} {
      allow read: if isAuthenticated() && getUserRoleId() == 'admin';
      allow create: if isAuthenticated(); // Allow any authenticated user to create audit logs
      allow update, delete: if false;
    }

    match /borrowers/{borrowerId} {
      allow read: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer', 'auditor'];
      allow create: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer'];
      allow update: if isAuthenticated() && getUserRoleId() in ['admin', 'manager'] &&
        // Prevent registration fee status from being tampered with.
        // It can only be changed from false to true, and only if a valid payment record exists.
        (request.resource.data.registrationFeePaid == resource.data.registrationFeePaid ||
          (request.resource.data.registrationFeePaid == true && resource.data.registrationFeePaid == false && exists(/databases/$(database)/documents/registrationPayments/$(request.resource.data.registrationPaymentId)))
        );
      allow delete: if isAuthenticated() && getUserRoleId() in ['admin', 'manager'];
    }

    match /loans/{loanId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer'] &&
        // Enforce registration fee payment and max loan amount
        get(/databases/$(database)/documents/borrowers/$(request.resource.data.borrowerId)).data.registrationFeePaid == true &&
        request.resource.data.principal <= 1000000;
      allow update: if isAuthenticated() && getUserRoleId() in ['admin', 'manager'];
      allow delete: if false;

      match /installments/{installmentId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer'];
      }
    }

    match /loanProducts/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && getUserRoleId() == 'admin';
    }

    match /repayments/{repaymentId} {
      allow read: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer'];
      allow create: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer'];
      allow update, delete: if false;
    }

    match /registrationPayments/{paymentId} {
        allow read: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer', 'auditor'];
        allow create: if isAuthenticated() && getUserRoleId() in ['admin', 'manager', 'loan_officer'] &&
            // Enforce correct fee amount and prevent duplicate payments
            request.resource.data.amount == 800 &&
            get(/databases/$(database)/documents/borrowers/$(request.resource.data.borrowerId)).data.registrationFeePaid == false;
        allow update, delete: if false; // Payments are immutable
    }
  }
}
