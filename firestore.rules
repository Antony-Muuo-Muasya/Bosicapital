
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // This rule allows any authenticated user to read and write to any document
    // in the database. This will resolve the "Missing or insufficient permissions"
    // errors you were encountering.
    // For production applications, it is highly recommended to implement more
    // granular security rules to protect your data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
