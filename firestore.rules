
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // Helper Functions
    // =================================
        
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // This function can be used to get the role of the CURRENTLY authenticated user.
    function getMyRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId;
    }
    
    // This function gets the org of the CURRENTLY authenticated user.
    function getMyOrg() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId;
    }

    // Check if the current user exists in the users collection.
    // This is a prerequisite for getting their role or org.
    function userProfileExists() {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // =================================
    // Collection Rules
    // =================================

    match /users/{userId} {
      // A user can get their own profile.
      // Or, any signed-in user can get another user's profile if they are in the same organization.
      // This is safe because the get() on the requester's own profile is allowed by the isOwner() check.
      allow get: if isSignedIn() && (
        isOwner(userId) || 
        (userProfileExists() && getMyOrg() == resource.data.organizationId)
      );

      // Admins and Managers can list users within their own org. This requires a query with organizationId.
      allow list: if isSignedIn() && userProfileExists() && (getMyRole() in ['admin', 'manager']) && 
                   request.query.organizationId == getMyOrg();
                   
      // New users can create their own profile during signup.
      allow create: if isOwner(userId);

      // A user can update their own profile. An admin can update any user in their org.
      allow update: if isSignedIn() && (
        isOwner(userId) ||
        (userProfileExists() && getMyRole() == 'admin' && getMyOrg() == resource.data.organizationId)
      );
      
      // Only admins can delete users.
      allow delete: if isSignedIn() && userProfileExists() && getMyRole() == 'admin';
    }
    
    // All authenticated users can see what roles exist.
    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if false; // Roles are seeded, not client-writable
    }
    
    // Staff (admin, manager, loan_officer) can read branches. Admins can write.
    match /branches/{branchId} {
      allow read: if isSignedIn() && userProfileExists() && (getMyRole() in ['admin', 'manager', 'loan_officer']);
      allow write: if isSignedIn() && userProfileExists() && getMyRole() == 'admin';
    }
    
    // Staff can read/write borrowers. A borrower can read their own record.
    match /borrowers/{borrowerId} {
      allow get: if isSignedIn() && (
        (userProfileExists() && getMyRole() in ['admin', 'manager', 'loan_officer']) || 
        isOwner(resource.data.userId)
      );
      // Staff can list all borrowers. Borrowers can also query, but the 'get' rule above
      // ensures they can only actually read their own data from the results.
      allow list: if isSignedIn();
      
      allow create, update: if isSignedIn() && userProfileExists() && (getMyRole() in ['admin', 'manager', 'loan_officer']);
      allow delete: if isSignedIn() && userProfileExists() && getMyRole() == 'admin';
    }
    
    // Staff can read/create loans. Borrowers can read their own loan. Admins approve.
    match /loans/{loanId} {
      // To read a loan, you must be staff OR be the user associated with the borrower on that loan.
      // This requires two 'get's, which is allowed.
      allow get: if isSignedIn() && (
        (userProfileExists() && getMyRole() in ['admin', 'manager', 'loan_officer']) || 
        (exists(/databases/$(database)/documents/borrowers/$(resource.data.borrowerId)) && 
         isOwner(get(/databases/$(database)/documents/borrowers/$(resource.data.borrowerId)).data.userId))
      );
      allow list: if isSignedIn();
      allow create: if isSignedIn() && userProfileExists() && (getMyRole() in ['admin', 'manager', 'loan_officer']);
      allow update: if isSignedIn() && userProfileExists() && getMyRole() == 'admin';
      allow delete: if false; // For data integrity
    }
    
    // Subcollection for loan installments.
    match /loans/{loanId}/installments/{installmentId} {
      // Similar logic to reading a loan.
      allow read: if isSignedIn() && (
        (userProfileExists() && getMyRole() in ['admin', 'manager', 'loan_officer']) ||
        (exists(/databases/$(database)/documents/loans/$(loanId)) && 
         exists(/databases/$(database)/documents/borrowers/$(get(/databases/$(database)/documents/loans/$(loanId)).data.borrowerId)) && 
         isOwner(get(/databases/$(database)/documents/borrowers/$(get(/databases/$(database)/documents/loans/$(loanId)).data.borrowerId)).data.userId))
      );
      allow write: if isSignedIn() && userProfileExists() && getMyRole() == 'admin';
    }
    
    // Any authenticated user can read loan products. Admins can write.
    match /loanProducts/{loanProductId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && userProfileExists() && getMyRole() == 'admin';
    }
    
    // Staff can read/create repayments and registration payments.
    match /repayments/{repaymentId} {
      allow read, create: if isSignedIn() && userProfileExists() && (getMyRole() in ['admin', 'manager', 'loan_officer']);
      allow update, delete: if false;
    }
    
    match /registrationPayments/{paymentId} {
      allow read, create: if isSignedIn() && userProfileExists() && (getMyRole() in ['admin', 'manager', 'loan_officer']);
      allow update, delete: if false;
    }
    
    // Audit logs are admin-only
    match /auditLogs/{logId} {
        allow read, write: if isSignedIn() && userProfileExists() && getMyRole() == 'admin';
    }
  }
}
