
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isStaff(userId) {
        // This function should only be used in WRITE rules.
        // Using get() in a read/list rule can cause performance issues or timeouts.
        let role = get(/databases/$(database)/documents/users/$(userId)).data.roleId;
        return role in ['admin', 'manager', 'loan_officer'];
    }

    // Default to read-only for authenticated users
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Deny writes by default
    }

    // Allow users to update their own profile
    match /users/{userId} {
      allow write: if request.auth.uid == userId;
    }
    
    // Allow staff to write to business collections
    match /branches/{branchId} {
        allow write: if isStaff(request.auth.uid);
    }
    
    match /borrowers/{borrowerId} {
      allow write: if isStaff(request.auth.uid);
    }

    match /loanProducts/{productId} {
      allow write: if isStaff(request.auth.uid);
    }

    match /loans/{loanId} {
      allow write: if isStaff(request.auth.uid);

       match /installments/{installmentId} {
        allow write: if isStaff(request.auth.uid);
      }
    }

    match /repayments/{repaymentId} {
      allow write: if isStaff(request.auth.uid);
    }
    
    match /registrationPayments/{paymentId} {
        allow write: if isStaff(request.auth.uid);
    }
  }
}
